<form class="d-inline" method="post" action="{{ path('pk_invoice_delete', {'invoiceId': invoice.id}) }}" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
    <button class="btn btn-danger">{{'delete'|trans}}</button>
</form>
